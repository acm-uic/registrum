{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "moduleResolution": "node",
        "jsx": "react",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext",
            "webworker"
        ],
        "strict": true,
        "noEmit": true,
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "resolveJsonModule": true,
        "baseUrl": "src",
        "paths": {
            "@utils": [
                "utils"
            ],
            "@actions": [
                "models/redux/actions"
            ],
            "@reducers": [
                "models/redux/reducers"
            ],
            "@redux": [
                "models/redux"
            ],
            "@components": [
                "components"
            ],
            "@styles": [
                "styles"
            ],
            "@assets": [
                "assets"
            ],
            "@interfaces": [
                "models/interfaces"
            ],
            "@pages": [
                "pages"
            ]
        }
    },
    "exclude": [
        "node_modules"
    ]
}