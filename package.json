{
  "private": true,
  "scripts": {
    "build": "lerna run build --stream",
    "test": "lerna run test --stream",
    "clean": "git clean -ffdX",
    "lint": "lerna run lint --stream",
    "prettier": "prettier --write .",
    "coverage": "codecov",
    "gen-web-push": "npx web-push generate-vapid-keys --json > web-push-keys.json"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "workspaces": {
    "packages": [
      "projects/*"
    ],
    "nohoist": [
      "**/workbox*",
      "**/workbox*/**"
    ]
  },
  "devDependencies": {
    "codecov": "^3.7.2",
    "husky": "^4.2.5",
    "lerna": "^3.22.1",
    "prettier": "^2.1.1",
    "pretty-quick": "^3.0.2"
  }
}
